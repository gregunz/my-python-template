[project]
name = "{{project_name}}"
version = "0.0.1"
readme = "README.md"
requires-python = "{{python_version}}"
dependencies = []

[dependency-groups]
dev = [
    "jupyter",
    "pre-commit",
    "ruff",
    "taskipy",
]

[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"

[tool.hatch.build.targets.wheel]
packages = ["src"]

[tool.taskipy.tasks]
setup  = {cmd = "pre-commit install --config .pre-commit-config.yaml", help = "repository setup"}
format = {cmd = "pre-commit run --all-files", help = "apply ruff for fixing linting issues and formatting"}
