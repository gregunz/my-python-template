[project]
name = "{{project_name}}"
version = "0.0.1"
readme = "README.md"
requires-python = "{{python_version}}"
dependencies = []

[dependency-groups]
dev = [
    "jupyter",
]

[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"

[tool.hatch.build.targets.wheel]
packages = [{ include = "{{module_name}}", from = "src" }]